<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registro - Presupuesto Personal</title>
  <link rel="icon" href="img/Logo.ico" type="image/x-icon">
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/lucide@latest"></script>
  <style>
    .bg-gradient-radial {
      background-image: radial-gradient(circle, var(--tw-gradient-stops));
    }
    html, body {
      overflow-y: auto;
      height: 100%;
    }
    .text-gradient {
      background-clip: text;
      -webkit-background-clip: text;
      color: transparent;
      padding-bottom: 0.2em;
    }
    .toggle-image-btn {
      transition: all 0.3s ease;
    }
    .toggle-image-btn:hover {
      transform: rotate(90deg);
    }


/* Fondo blanco s√≥lido con efecto glass encima */
.glass-wrapper {
  position: relative;
  background: rgba(255, 255, 255, 0.9); /* ‚Üê blanco s√≥lido base */
  border-radius: 1rem;
  overflow: visible;
  z-index: 1;
  border: 3.5px solid rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(15px);
  -webkit-backdrop-filter: blur(15px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.25);
  transition: all 0.4s ease;
}

/* üåü Borde brillante dorado-fucsia */
.glass-wrapper::before {
  content: "";
  position: absolute;
  inset: -8px;
  border-radius: inherit;
  background: linear-gradient(135deg,
    rgba(241, 183, 10, 0.95),
    rgba(192, 38, 211, 0.6)
  );
  filter: blur(30px);
  z-index: -1;
  opacity: 0.5;
}


    
  </style>
</head>
<body class="glass-body relative min-h-screen overflow-y-auto bg-slate-900">
  <!-- Fondo -->
  <img src="/public/img/fondoiniciosesion.png"
       alt="Fondo inicio sesi√≥n"
       class="fixed inset-0 w-full h-full object-cover -z-10">

  <!-- Capa blanca semitransparente sobre el fondo -->
  <div class="fixed inset-0 bg-white/40 backdrop-blur-md -z-10"></div>

  <!-- Contenido principal -->
<div class="relative z-10 py-12 px-6 flex flex-col items-center min-h-screen">
  <!-- Formulario principal -->
  <div class="glass-wrapper rounded-xl mb-10 w-full max-w-5xl">
    <div class="text-center py-10 space-y-3">
      <h1 class="text-6xl font-bold bg-gradient-to-r from-white via-yellow-600 to-emerald-200 text-gradient drop-shadow-2xl">
        Reg√≠strate
            </h1>
            <p class="text-xl text-black font-medium">
            √önete a la plataforma para tu Presupuesto
            </p>
        </div>
        <div class="p-8">
          <form action="/registrar" method="POST" enctype="multipart/form-data" class="space-y-8" autocomplete="off">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
              <!-- Columna izquierda - Informaci√≥n personal -->
              <div class="space-y-6">
                <div class="space-y-4">
                  <h3 class="text-2xl font-bold text-slate-800 flex items-center gap-2">
                    Informaci√≥n Personal
                  </h3>
                  <div class="bg-slate-200 h-px w-full"></div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div class="space-y-2">
                    <label for="nom" class="text-black font-medium flex items-center gap-2">
                      Nombres
                    </label>
                    <input
                      type="text"
                      id="nom"
                      name="nom"
                      required
                      class="w-full px-3 py-2 border border-slate-300 rounded-md bg-white text-slate-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20"
                    />
                  </div>
                  <div class="space-y-2">
                    <label for="apell" class="text-black font-medium flex items-center gap-2">
                      Apellidos
                    </label>
                    <input
                      type="text"
                      id="apell"
                      name="apell"
                      required
                      class="w-full px-3 py-2 border border-slate-300 rounded-md bg-white text-slate-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20"
                    />
                  </div>
                </div>

                <div class="space-y-2">
                  <label for="username" class="text-black font-medium flex items-center gap-2">
                    Nombre de usuario
                  </label>
                  <input
                    type="text"
                    id="username"
                    name="username"
                    required
					autocomplete="new-username"
                    class="w-full px-3 py-2 border border-slate-300 rounded-md bg-white text-slate-900 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20"
                  />
                </div>
				
				<div class="space-y-4">
                  <div class="space-y-2">
                    <label for="prof" class="text-black font-medium flex items-center gap-2">
                     Profesi√≥n
                    </label>
                    <input
                      type="text"
                      id="prof"
                      name="prof"
                      class="w-full px-3 py-2 border border-slate-300 rounded-md bg-white text-slate-900 focus:border-orange-500 focus:ring-2 focus:ring-orange-500/20"
                    />
                  </div>
                </div>
				
                <div class="space-y-2">
                  <label for="email" class="text-black font-medium flex items-center gap-2">
                    Correo electr√≥nico
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-3 py-2 border border-slate-300 rounded-md bg-white text-slate-900 focus:border-purple-500 focus:ring-2 focus:ring-purple-500/20"
                  />
                </div>

                <div class="space-y-2">
                  <label for="pass" class="text-black font-medium flex items-center gap-2">
                    Contrase√±a
                  </label>
                  <input
                    type="password"
                    id="pass"
                    name="pass"
                    placeholder="********"
                    minlength="6"
                    required
					autocomplete="new-password"
                    class="w-full px-3 py-2 border border-slate-300 rounded-md bg-white text-slate-900 placeholder:text-slate-500 focus:border-red-500 focus:ring-2 focus:ring-red-500/20"
                  />
                  <p class="text-xs text-slate-800">
                     La contrase√±a debe tener al menos 6 caracteres para proteger tus finanzas.
                  </p>
                </div>
				
				
              </div>

              <!-- Columna derecha - Foto y detalles adicionales -->
              <div class="space-y-6">
                <!-- Foto de perfil -->
                <div class="space-y-4">
                    <h3 class="text-2xl font-bold text-black flex items-center gap-2 justify-center text-center">       
                    Foto de Perfil
                  </h3>
                  <div class="bg-slate-200 h-px w-full"></div>
                </div>

                <div class="flex flex-col items-center space-y-4">
                  <!-- Preview principal - circular -->
                  <div class="relative">
                    <div class="w-40 h-40 border-4 border-slate-200 rounded-full bg-slate-50 shadow-lg flex items-center justify-center overflow-hidden">
                      <img
                        id="preview"
                        src=""
                        alt="Vista previa circular"
                        class="w-full h-full object-cover hidden"
                        style="object-position: center;"
                      />
                      <div id="default-icon" class="flex flex-col items-center">
                        <i data-lucide="user" class="h-12 w-12 text-slate-400 mb-2"></i>
                        <i data-lucide="dollar-sign" class="h-8 w-8 text-emerald-500"></i>
                      </div>
                    </div>
                    <button
                      type="button"
                      onclick="removeImage()"
                      id="btnEliminar"
                      class="absolute -top-2 -right-2 h-8 w-8 rounded-full p-0 bg-red-500 hover:bg-red-400 shadow-lg hidden items-center justify-center text-white"
                    >
                      <i data-lucide="x" class="h-4 w-4"></i>
                    </button>
                    <button
                      type="button"
                      onclick="toggleImageStyle()"
                      id="btnToggleStyle"
                      class="absolute -bottom-2 -right-2 h-8 w-8 rounded-full p-0 bg-blue-500 hover:bg-blue-400 shadow-lg hidden items-center justify-center text-white toggle-image-btn"
                      title="Ajustar imagen"
                    >
                      <i data-lucide="rotate-ccw" class="h-4 w-4"></i>
                    </button>
                  </div>

                  <!-- Preview completo - rectangular -->
                  <div id="fullPreviewContainer" class="w-full max-w-xs hidden">
                    <p class="text-xs text-slate-600 mb-2 text-center">Vista previa completa:</p>
                    <div class="relative bg-slate-50 border-2 border-slate-200 rounded-lg p-2">
                      <img
                        id="fullPreview"
                        src=""
                        alt="Vista previa completa"
                        class="w-full h-auto max-h-32 object-contain rounded"
                      />
                    </div>
                  </div>

                  <div class="flex flex-col gap-2">
                    <input
                      type="file"
                      id="foto"
                      name="foto"
                      accept="image/*"
                      class="hidden"
                      onchange="previewImage(event)"
                    />
                    <button
                      type="button"
                      onclick="document.getElementById('foto').click()"
                      class="bg-fuchsia-700 hover:bg-fuchsia-700 shadow-lg text-white font-medium py-2 px-4 rounded-md flex items-center justify-center"
                    >
                      <i data-lucide="camera" class="h-4 w-4 mr-2"></i>Subir imagen
                    </button>
                    <p class="text-xs text-slate-900 text-center">Solo im√°genes (.jpg, .png, etc.)</p>
                    <p id="imageTip" class="text-xs text-black text-center hidden">
                      üí° Usa el bot√≥n azul para ajustar c√≥mo se ve la imagen
                    </p>
                  </div>
                </div>

                <!-- Campos adicionales -->
				<div class="space-y-2">
                    <label for="expec" class="text-black font-medium flex items-center gap-2">
                    Metas Financieras
                    </label>
                    <textarea
                      id="expec"
                      name="expec"
                      rows="4"
                      placeholder="Cu√©ntanos tus objetivos financieros..."
                      class="w-full px-3 py-2 border border-slate-300 rounded-md bg-white text-slate-900 placeholder:text-slate-500 focus:border-teal-500 focus:ring-2 focus:ring-teal-500/20 resize-none"
                    ></textarea>
                  </div>
              </div>
            </div>

            <!-- Secci√≥n de notificaciones -->
            <div class="space-y-6">
              <div class="space-y-4">
                <h3 class="text-2xl font-bold text-slate-800 flex items-center gap-2">
                  <i data-lucide="bell" class="h-6 w-6 text-black"></i>Notificaciones de Presupuesto
                </h3>
                <div class="bg-slate-200 h-px w-full"></div>
                <p class="text-slate-800">Elige c√≥mo quieres recibir alertas sobre tus finanzas:</p>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <!-- B√°sico -->
                <label class="group cursor-pointer flex-1">
                  <div class="border-2 transition-all duration-300 hover:scale-105 border-slate-200 bg-white hover:bg-slate-50 rounded-xl p-6 text-center group-has-[input:checked]:border-emerald-500 group-has-[input:checked]:bg-emerald-50 group-has-[input:checked]:shadow-lg w-full h-full">
                    <div class="flex items-center justify-center gap-2 mb-2">
                      <div class="w-3 h-3 rounded-full bg-emerald-500"></div>
                      <h4 class="text-lg font-bold text-slate-800"> B√°sico</h4>
                    </div>
                    <p class="text-sm text-slate-800"> Resumen mensual de gastos e ingresos</p>
                  </div>
                </label>

                <!-- Medio -->
                 <label class="group cursor-pointer flex-1">
                    <div class="border-2 transition-all duration-300 hover:scale-105 border-slate-200 bg-white hover:bg-slate-50 rounded-xl p-6 text-center group-has-[input:checked]:border-orange-500 group-has-[input:checked]:bg-orange-50 group-has-[input:checked]:shadow-lg w-full h-full">
                        <div class="flex items-center justify-center gap-2 mb-2">
                        <div class="w-3 h-3 rounded-full bg-amber-500"></div>
                        <h4 class="text-lg font-bold text-slate-800">Moderado</h4>
                        </div>
                        <p class="text-sm text-slate-600">Resumen mensual + alertas de l√≠mites de gastos</p>
                    </div>
                    </label>

                
                <!-- Intenso -->
                <label class="group cursor-pointer">
                  <input
                    type="radio"
                    name="notificaciones"
                    value="intenso"
                    class="sr-only"
                  />
                  <div class="border-2 transition-all duration-300 hover:scale-105 border-slate-200 bg-white hover:bg-slate-50 rounded-xl p-6 text-center group-has-[input:checked]:border-orange-500 group-has-[input:checked]:bg-orange-50 group-has-[input:checked]:shadow-lg">
                    <div class="flex items-center justify-center gap-2 mb-2">
                      <div class="w-3 h-3 rounded-full bg-orange-500"></div>
                      <h4 class="text-lg font-bold text-slate-800"> Completo</h4>
                    </div>
                    <p class="text-sm text-slate-600">
                      Alertas diarias, semanales y recordatorios de pagos
                    </p>
                  </div>
                </label>
              </div>
            </div>

            <!-- Botones de acci√≥n -->
            <div class="flex flex-col sm:flex-row gap-4 justify-end pt-6">
              <a
                href="/login"
                class="sm:w-auto w-full border border-slate-300 text-black hover:bg-red-50 hover:border-red-300 hover:text-red-700 transition-all duration-300 bg-transparent font-medium py-2 px-4 rounded-md flex items-center justify-center"
              >
                Cancelar
              </a>
              <button
                type="submit"
                class="sm:w-auto w-full bg-gradient-to-r from-fuchsia-700 to-fuchsia-700 hover:from-green-700 hover:to-green-700 text-white font-bold shadow-lg transition-all duration-300 py-2 px-4 rounded-md flex items-center justify-center"
              >
                <i data-lucide="user-plus" class="h-5 w-5 mr-2"></i> Comenzar mi Presupuesto
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Inicializar iconos Lucide
    lucide.createIcons();

    let currentImageStyle = 'cover';

    // Vista previa de imagen
    function previewImage(event) {
      const input = event.target;
      const preview = document.getElementById('preview');
      const fullPreview = document.getElementById('fullPreview');
      const defaultIcon = document.getElementById('default-icon');
      const btnEliminar = document.getElementById('btnEliminar');
      const btnToggleStyle = document.getElementById('btnToggleStyle');
      const fullPreviewContainer = document.getElementById('fullPreviewContainer');
      const imageTip = document.getElementById('imageTip');

      if (input.files && input.files[0]) {
        const reader = new FileReader();
        reader.onload = function(e) {
          preview.src = e.target.result;
          fullPreview.src = e.target.result;
          preview.classList.remove('hidden');
          defaultIcon.classList.add('hidden');
          btnEliminar.classList.remove('hidden');
          btnToggleStyle.classList.remove('hidden');
          fullPreviewContainer.classList.remove('hidden');
          imageTip.classList.remove('hidden');
          
          // Aplicar estilo inicial
          preview.style.objectFit = currentImageStyle;
          preview.style.objectPosition = 'center';
        };
        reader.readAsDataURL(input.files[0]);
      }
    }

    // Alternar estilo de la imagen
    function toggleImageStyle() {
      const preview = document.getElementById('preview');
      currentImageStyle = currentImageStyle === 'cover' ? 'contain' : 'cover';
      preview.style.objectFit = currentImageStyle;
      
      // Animaci√≥n del bot√≥n
      const btn = document.getElementById('btnToggleStyle');
      btn.classList.add('toggle-image-btn-active');
      setTimeout(() => {
        btn.classList.remove('toggle-image-btn-active');
      }, 300);
    }

    // Eliminar imagen
    function removeImage() {
      const input = document.getElementById('foto');
      const preview = document.getElementById('preview');
      const fullPreview = document.getElementById('fullPreview');
      const defaultIcon = document.getElementById('default-icon');
      const btnEliminar = document.getElementById('btnEliminar');
      const btnToggleStyle = document.getElementById('btnToggleStyle');
      const fullPreviewContainer = document.getElementById('fullPreviewContainer');
      const imageTip = document.getElementById('imageTip');

      input.value = '';
      preview.src = '';
      fullPreview.src = '';
      preview.classList.add('hidden');
      defaultIcon.classList.remove('hidden');
      btnEliminar.classList.add('hidden');
      btnToggleStyle.classList.add('hidden');
      fullPreviewContainer.classList.add('hidden');
      imageTip.classList.add('hidden');
      currentImageStyle = 'cover';
    }
  </script>
</body>
</html>