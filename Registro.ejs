  <script>
    // Inicializar iconos Lucide
    lucide.createIcons();

    let currentImageStyle = 'cover';

    // Vista previa de imagen
    function previewImage(event) {
      const input = event.target;
      const preview = document.getElementById('preview');
      const fullPreview = document.getElementById('fullPreview');
      const defaultIcon = document.getElementById('default-icon');
      const btnEliminar = document.getElementById('btnEliminar');
      const btnToggleStyle = document.getElementById('btnToggleStyle');
      const fullPreviewContainer = document.getElementById('fullPreviewContainer');
      const imageTip = document.getElementById('imageTip');

      if (input.files && input.files[0]) {
        const reader = new FileReader();
        reader.onload = function(e) {
          preview.src = e.target.result;
          fullPreview.src = e.target.result;
          preview.classList.remove('hidden');
          defaultIcon.classList.add('hidden');
          btnEliminar.classList.remove('hidden');
          btnToggleStyle.classList.remove('hidden');
          fullPreviewContainer.classList.remove('hidden');
          imageTip.classList.remove('hidden');
          
          // Aplicar estilo inicial
          preview.style.objectFit = currentImageStyle;
          preview.style.objectPosition = 'center';
        };
        reader.readAsDataURL(input.files[0]);
      }
    }

    // Alternar estilo de la imagen
    function toggleImageStyle() {
      const preview = document.getElementById('preview');
      currentImageStyle = currentImageStyle === 'cover' ? 'contain' : 'cover';
      preview.style.objectFit = currentImageStyle;
      
      // AnimaciÃ³n del botÃ³n
      const btn = document.getElementById('btnToggleStyle');
      btn.classList.add('toggle-image-btn-active');
      setTimeout(() => {
        btn.classList.remove('toggle-image-btn-active');
      }, 300);
    }

    // Eliminar imagen
    function removeImage() {
      const input = document.getElementById('foto');
      const preview = document.getElementById('preview');
      const fullPreview = document.getElementById('fullPreview');
      const defaultIcon = document.getElementById('default-icon');
      const btnEliminar = document.getElementById('btnEliminar');
      const btnToggleStyle = document.getElementById('btnToggleStyle');
      const fullPreviewContainer = document.getElementById('fullPreviewContainer');
      const imageTip = document.getElementById('imageTip');

      input.value = '';
      preview.src = '';
      fullPreview.src = '';
      preview.classList.add('hidden');
      defaultIcon.classList.remove('hidden');
      btnEliminar.classList.add('hidden');
      btnToggleStyle.classList.add('hidden');
      fullPreviewContainer.classList.add('hidden');
      imageTip.classList.add('hidden');
      currentImageStyle = 'cover';
    }
  </script>
