  content: "";
  position: absolute;
  inset: -10px;
  border-radius: inherit;
  background: linear-gradient(135deg,
    rgba(241, 183, 10, 0.95),
    rgba(192, 38, 211, 0.55)
  );
  filter: blur(25px);
  z-index: -1;
  opacity: 0.6;
}

